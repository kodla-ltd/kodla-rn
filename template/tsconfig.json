{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "sourceMap": true,
    "isolatedModules": false,
    "pretty": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "types": ["node"]
  },
  "include": ["src/**/*", "_scripts/**/*", "*.config.ts"]
}
